option_settings:
  aws:elasticbeanstalk:application:environment:
    # Workaround for failing semantic-ui build when headless
    CLI_WIDTH: 80
container_commands:
  01_node_symlink:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-v7*/bin/node | head -1` /bin/node"
  02_npm_symlink:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-v7*/bin/npm | head -1` /bin/npm"
  # Build the proper native version of sqlite3 for aws
  03_build_sqlite3:
    command: "sudo npm install sqlite3"
